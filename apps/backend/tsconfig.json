{
  "extends": "@music/typescript-config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "#types/*": [
        "./src/types/*"
      ],
      "#database/*": [
        "./src/database/*"
      ],
      "#utils/*": [
        "./src/utils/*"
      ],
      "#decorators/*": [
        "./src/decorators/*"
      ],
      "#guards/*": [
        "./src/guards/*"
      ],
      "#modules/*": [
        "./src/modules/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}